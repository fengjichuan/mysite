body{
	font:12px/22px Verdana,"宋体",Arial,Helvetica,sans-serif;
}

.menu-box {
	width:120px;
	height:auto;
	position:absolute;
	z-index:100001;
	overflow:hidden;
	display:none;
	border:1px solid #555555;
	-moz-box-shadow:0 3px 8px #739197;
	-webkit-box-shadow:0 3px 8px #739197;
	box-shadow:0 3px 8px #739197;
	zoom:100%;
}

.menu-box .data-layer{
	position:relative;
	z-index:99999;
	overflow:hidden;
	background-color:#fff;
	display:block;
	width:100%;
	zoom:100%;
}

.menu-box .frame-layer{
	background:transparent;
	position:absolute;
	z-index:99998;
	top:0px;
	left:0px;
	overflow:hidden;
	border:0px;
	width:100%;
	height:100%;
	zoom:100%;
}

.menu-box .item{
	height:22px;
	width:100%;
	line-height:22px;
	font-size:12px;
	color:#333;
	cursor:pointer;
	display:block;
	zoom:100%;
}

.menu-box .item-over{
	background-color:#ffc6c6;
}

.menu-box .item-txt{
	margin:auto 6px;
	zoom:100%;
}

.menu-box .item-arrow{
	background:url('dropdown-sub.png') no-repeat;
	width:8px;
	height:8px;
	float:right;
	margin-top:8px;
	zoom:100%;
}

.menu-box .flag-item{
	 background-image: url('flags.gif');
	 background-repeat: no-repeat;
	 display:block;
	 width:80px;
	 height:20px;
	 line-height:20px;
	 margin-left:16px;
	 zoom:100%;
}
.menu-box .flag1{
	background-position: 0px 4px;
}
.menu-box .flag2{
	background-position: 0px -17px;
}
.menu-box .flag3{
	background-position: 0px -38px;
}
.menu-box .flag4{
	background-position: 0px -59px;
}
.menu-box .flag5{
	background-position: 0px -80px;
}
.menu-box .flag6{
	background-position: 0px -101px;
}
.menu-box .flag7{
